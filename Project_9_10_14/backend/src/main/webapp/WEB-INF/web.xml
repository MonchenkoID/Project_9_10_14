    <servlet-mapping>
        <servlet-name>sign</servlet-name>
        <url-pattern>/sign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>guestbook</servlet-name>
        <url-pattern>/guestbook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>glossary</servlet-name>
        <url-pattern>/glossary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tim</servlet-name>
        <url-pattern>/tim</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>tim.jsp</welcome-file>
    </welcome-file-list>
</web-app>