    <servlet>
        <servlet-name>guestbook</servlet-name>
        <servlet-class>com.github.monchenkoid.project_9_10_14.backend.GuestbookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>glossary</servlet-name>
        <servlet-class>com.github.monchenkoid.project_9_10_14.backend.GlossaryServlet</servlet-class>
